<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.oriondev.moneywallet.ui.view.theme.ThemedRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:theme_backgroundColor="colorPrimary" >

        <com.oriondev.moneywallet.ui.view.theme.ThemedTextView
            android:id="@+id/display_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="36sp"
            android:gravity="end"
            app:theme_textColor="textOverColorPrimary"
            tools:text="â‚¬ 1.245,89" />

    </com.oriondev.moneywallet.ui.view.theme.ThemedRelativeLayout>

    <com.oriondev.moneywallet.ui.view.theme.ThemedSwitchCompat
        android:id="@+id/show_currency_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/hint_show_currency_symbol"
        android:textSize="14sp" />

    <com.oriondev.moneywallet.ui.view.theme.ThemedSwitchCompat
        android:id="@+id/group_digits_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/hint_group_digits"
        android:textSize="14sp" />

    <com.oriondev.moneywallet.ui.view.theme.ThemedSwitchCompat
        android:id="@+id/round_decimals_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/hint_round_decimals"
        android:textSize="14sp" />

    <com.oriondev.moneywallet.ui.view.theme.ThemedSwitchCompat
        android:id="@+id/show_always_plus_minus_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/hint_show_always_plus_minus"
        android:textSize="14sp" />

</LinearLayout>